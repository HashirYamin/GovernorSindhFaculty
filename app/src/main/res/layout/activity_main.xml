<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/upload_files"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_70sdp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/circle_pink"
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:background="@drawable/circle_pink"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/upload_file"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/baseline_attach_file_24"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_centerHorizontal="true"
                android:background="@color/light_gray"
                android:layout_below="@+id/circle_pink"
                android:layout_marginTop="@dimen/_15sdp"
                />
            <TextView
                android:id="@+id/upload_file_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Files"
                android:textSize="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/attach_links"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_70sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/circle_yellow"
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:background="@drawable/circle_yellow"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/links_image"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/baseline_add_link_24"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/line_red"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/circle_yellow"
                android:layout_marginTop="@dimen/_15sdp"
                />
            <TextView
                android:id="@+id/attach_link_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach Links"
                android:textSize="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line_red"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/upload_vedios"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_below="@+id/upload_files"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/circle_red"
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:background="@drawable/circle_red"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/yt_ved"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/baseline_yt_display_24"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/line_yellow"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/circle_red"
                android:layout_marginTop="@dimen/_15sdp"
                />
            <TextView
                android:id="@+id/upload_link_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach YT Vedios"
                android:textSize="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line_yellow"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/upload_assignments"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_22sdp"
        android:layout_below="@+id/upload_files"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/circle_green"
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:background="@drawable/circle_green"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/assignments_img"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/baseline_assignment_24"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/line_greeen"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_below="@+id/circle_green"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/assignts_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignments"
                android:textSize="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line_greeen"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/news"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_below="@+id/upload_files"
        android:layout_marginTop="@dimen/_150sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:id="@+id/circle_purple"
                android:layout_width="@dimen/_67sdp"
                android:layout_height="@dimen/_67sdp"
                android:background="@drawable/circle_purple"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/news_img"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/baseline_news_forum_24"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
            <View
                android:id="@+id/line_purple"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_gray"
                android:layout_below="@+id/circle_purple"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/news_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News"
                android:textSize="@dimen/_13sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/line_purple"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@color/black"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>